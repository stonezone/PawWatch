<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>BGTaskSchedulerPermittedIdentifiers</key>
	<array>
		<string>com.stonezone.pawWatch.activity-refresh</string>
	</array>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.stonezone.pawwatch</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>pawwatch</string>
			</array>
		</dict>
	</array>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	<key>NSHealthShareUsageDescription</key>
	<string>pawWatch reads Health data (like heart rate) to validate tracking sessions and safety.</string>
	<key>NSHealthUpdateUsageDescription</key>
	<string>Allow pawWatch to record pet walks as workouts to keep the session alive and show activity trends.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Allow pawWatch to stay updated on your pet's path when the app is not in the foreground.</string>
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>pawWatch needs location access to mirror your pet's position from the watch.</string>
	<key>PAWWATCH_PUSH_API_KEY</key>
	<string>$(PAWWATCH_PUSH_API_KEY)</string>
	<key>PAWWATCH_PUSH_ENDPOINT</key>
	<string>$(PAWWATCH_PUSH_ENDPOINT)</string>
	<key>PAWWATCH_PUSH_ENVIRONMENT</key>
	<string>$(PAWWATCH_PUSH_ENVIRONMENT)</string>
	<key>PAWWATCH_PUSH_SIGNATURE_KEY</key>
	<string>$(PAWWATCH_PUSH_SIGNATURE_KEY)</string>
	<key>PAWWATCH_PUSH_UPLOADS_ENABLED</key>
	<string>$(PAWWATCH_PUSH_UPLOADS_ENABLED)</string>
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>pawWatch.SceneDelegate</string>
				</dict>
			</array>
		</dict>
	</dict>
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>processing</string>
		<string>location</string>
		<string>remote-notification</string>
	</array>
	<key>UILaunchScreen</key>
	<dict/>
</dict>
</plist>
