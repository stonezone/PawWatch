<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>BGTaskSchedulerPermittedIdentifiers</key>
	<array>
		<string>com.stonezone.pawWatch.activity-refresh</string>
	</array>
	<key>CFBundleDisplayName</key>
	<string>pawWatch</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.stonezone.pawwatch</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>pawwatch</string>
			</array>
		</dict>
	</array>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.lifestyle</string>
	<key>NSHealthShareUsageDescription</key>
	<string>pawWatch uses Health data to display workout summaries from your pet's watch.</string>
	<key>NSHealthUpdateUsageDescription</key>
	<string>pawWatch writes workout samples so the iPhone can mirror watch activity.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>pawWatch needs continuous location access to track the distance to your pet even when the app is in the background.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>pawWatch requires always-on location access to maintain accurate distance tracking to your pet.</string>
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>pawWatch needs your location to calculate the distance between you and your pet wearing the Apple Watch.</string>
	<key>NSSupportsLiveActivities</key>
	<true/>
	<key>PAWWATCH_PUSH_API_KEY</key>
	<string>$(PAWWATCH_PUSH_API_KEY)</string>
	<key>PAWWATCH_PUSH_ENDPOINT</key>
	<string>$(PAWWATCH_PUSH_ENDPOINT)</string>
	<key>PAWWATCH_PUSH_ENVIRONMENT</key>
	<string>$(PAWWATCH_PUSH_ENVIRONMENT)</string>
	<key>PAWWATCH_PUSH_SIGNATURE_KEY</key>
	<string>$(PAWWATCH_PUSH_SIGNATURE_KEY)</string>
	<key>PAWWATCH_PUSH_UPLOADS_ENABLED</key>
	<string>$(PAWWATCH_PUSH_UPLOADS_ENABLED)</string>
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array/>
		</dict>
	</dict>
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>processing</string>
		<string>location</string>
		<string>remote-notification</string>
	</array>
	<key>UILaunchScreen</key>
	<dict/>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>location-services</string>
		<string>gps</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
	</array>
</dict>
</plist>
