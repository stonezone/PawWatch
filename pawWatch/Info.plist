<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bundle Configuration -->
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>

	<!-- Location Services Permissions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>pawWatch needs your location to calculate the distance between you and your pet wearing the Apple Watch.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>pawWatch needs continuous location access to track the distance to your pet even when the app is in the background.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>pawWatch requires always-on location access to maintain accurate distance tracking to your pet.</string>

	<!-- HealthKit Permissions -->
	<key>NSHealthShareUsageDescription</key>
	<string>pawWatch uses Health data to display workout summaries from your pet's watch.</string>
	<key>NSHealthUpdateUsageDescription</key>
	<string>pawWatch writes workout samples so the iPhone can mirror watch activity.</string>

	<!-- App Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.lifestyle</string>

	<!-- Required Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>location-services</string>
		<string>gps</string>
	</array>
</dict>
</plist>
