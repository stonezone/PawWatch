PAWWATCH_PUSH_API_KEY = __UNSET__
PAWWATCH_PUSH_SIGNATURE_KEY = __UNSET__
PAWWATCH_PUSH_ENVIRONMENT = __UNSET__
PAWWATCH_PUSH_UPLOADS_ENABLED = NO

// ==========================================
// Code Signing
// ==========================================
DEVELOPMENT_TEAM = 78725QX6PZ
CODE_SIGN_STYLE = Automatic

// ==========================================
// Entitlements
// ==========================================
// AI agents can modify Config/pawWatch.entitlements to add capabilities
CODE_SIGN_ENTITLEMENTS = Config/pawWatch.entitlements
