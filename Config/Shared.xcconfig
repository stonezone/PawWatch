PRODUCT_NAME = pawWatch
PRODUCT_DISPLAY_NAME = pawWatch
PRODUCT_BUNDLE_IDENTIFIER = com.stonezone.pawWatch

// ==========================================
// Platform Configuration
// ==========================================
IPHONEOS_DEPLOYMENT_TARGET = 18.4

