<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- HealthKit Capability -->
	<key>com.apple.developer.healthkit</key>
	<true/>

	<!-- HealthKit Clinical Records Access (required for some health data types) -->
	<key>com.apple.developer.healthkit.access</key>
	<array/>

	<!-- Shared App Group for widgets/live activities -->
	<key>com.apple.security.application-groups</key>
	<array>
		<string>group.com.stonezone.pawWatch</string>
	</array>

	<!-- Push notifications for Live Activity updates (Release builds only) -->
	<key>aps-environment</key>
	<string>development</string>
</dict>
</plist>
